@model Troškovnik

@{
    ViewBag.Title = "Ažuriranje troškovnika";
}

<h2>Ažuriranje troškovnika</h2>
<form asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      asp-action="Edit"
      method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="EvidBrojNatječaj"></label>
        <div><span asp-validation-for="EvidBrojNatječaj" class="text-danger" /></div>
        <select class="form-control" asp-for="EvidBrojNatječaj" asp-items="ViewBag.Natječaji">
            <option selected value="" disabled>Odaberite natječaj</option>
        </select>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index" asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-secondary">Odustani</a>
    </div>
</form>

