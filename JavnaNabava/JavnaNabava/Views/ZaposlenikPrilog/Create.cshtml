@model JavnaNabava.Models.ZaposlenikPrilog

@{
    ViewBag.Title = "Novi prilog zaposleniku";
}

<h2>Novi prilog zaposlenika</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="IdPrilog">ID</label>
        <div><span asp-validation-for="IdPrilog" class="text-danger"></span></div>
        <select class="form-control" asp-for="IdPrilog" asp-items="ViewBag.Nazivi">
            <option selected value="" disabled>Odaberite naziv priloga koji želite dodati zaposleniku:</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="OibZaposlenik">OIB Zaposlenika</label>
        <div><span asp-validation-for="OibZaposlenik" class="text-danger"></span></div>
        <select class="form-control" asp-for="OibZaposlenik" asp-items="ViewBag.OibZaposlenik">
            <option selected value="" disabled>Odaberite zaposlenika po OIB-u:</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="VrijediOd">Vrijedi od</label>
        <div><span asp-validation-for="VrijediOd" class="text-danger"></span></div>
        <input asp-for="VrijediOd" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="VrijediDo">Vrijedi do</label>
        <div><span asp-validation-for="VrijediDo" class="text-danger"></span></div>
        <input asp-for="VrijediDo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LinkNaPrilog">Link na prilog</label>
        <div><span asp-validation-for="LinkNaPrilog" class="text-danger"></span></div>
        <input asp-for="LinkNaPrilog" class="form-control" />
    </div>


    <div class="text-center">
        <button class="btn btn-primary" type="submit">Dodaj</button>
        <a asp-action="Index" class="btn btn-secondary">Odustani</a>
    </div>

</form>
