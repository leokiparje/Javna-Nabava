
@model JavnaNabava.ViewModels.DokumentViewModel

<tr>
  <td class="text-left">@Model.Naslov</td>
  <td class="text-left">@Model.Vrsta</td>
  <td class="text-left">@Model.Blob</td>
  <td class="text-left">@Model.NazivPonude</td>
  <td class="text-left">@Model.DatumPredaje</td>
  <td>
    <a asp-action="Edit" asp-route-id="@Model.DokumentId" class="btn bt-sm" title="Ažuriraj">
            <i class="fas fa-edit"></i>
    </a>
  </td>
  <td>
    <form asp-action="Delete" method="POST">
      <input type="hidden" name="id" value="@Model.DokumentId" />
      <button data-kont="@Model.DokumentId" type="submit" class="btn btn-sm btn-danger deleteajax" title="Obriši">
        <i class="fas fa-trash-alt"></i>
      </button>
    </form>
  </td>
</tr>