@model KonzorcijaViewModel

<h3>Popis članova konzorcija @Model.idKonzorcij</h3>

<div class="container">

    <div class="row justify-content-sm-center">

        <div class="col-sm-1 text-left">
            <a class="btn btn-sm btn-primary cancel"
               asp-action="Index"
               asp-route-page="@ViewBag.Page"
               asp-route-sort="@ViewBag.Sort"
               asp-route-ascending="@ViewBag.Ascending"
               asp-route-filter="@ViewBag.Filter"
               title="Povratak na popis konzorcija">
                <i class="fas fa-undo-alt"></i>
            </a>
        </div>
    </div>

    <table class="table table-sm table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Oib
                </th>

                <th>
                    Naziv
                </th>

                <th>
                    Adresa
                </th>

                <th>
                    Sjedište
                </th>


            </tr>
        </thead>
        <tbody>
            @foreach (var clan in Model.Clanovi)
            {
            <tr>
                <td class="text-left">@clan.oibPonditelj</td>
                <td class="text-left">@clan.nazivPonuditelj</td>
                <td class="text-left">@clan.adresaPonuditelj</td>
                <td class="text-left">@clan.sjedistePonuditelj</td>

            </tr>
            }
        </tbody>

    </table>
