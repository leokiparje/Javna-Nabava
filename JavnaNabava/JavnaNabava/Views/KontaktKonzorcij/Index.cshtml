@model JavnaNabava.ViewModels.KontaktiKonzorcijViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, JavnaNabava


@{
    ViewData["Title"] = "Popis kontakata konzorcija";
}

<a asp-action="Create">Unos novog kontakta konzorcija</a>

<pager page-info="@Model.PagingInfo" page-title="Unesite željenu stranicu" page-action="Index" class="float-right">

</pager>

<table class="table table-sm table-striped table-hover">
    <thead>
        <tr>
            @{
                string[] nazivi = { "Kontakt", "Naziv konzorcija", "Vrsta kontakta" };
                for (int i = 1; i <= nazivi.Length; i++)
                {
                    <th class="text-center">
                        <a asp-route-sort="@i" asp-route-page="@Model.PagingInfo.CurrentPage"
                           asp-route-ascending="@(Model.PagingInfo.Sort == 1 ? !Model.PagingInfo.Ascending : true)">
                            @nazivi[i - 1]
                        </a>
                    </th>
                }
            }
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kontakt in Model.KontaktiKonzorcija)
        {
            <partial name="Row" model="kontakt" />
        }
    </tbody>
</table>

@section scripts {
    <script src="~/js/pager.js" asp-append-version="true"></script>
}
