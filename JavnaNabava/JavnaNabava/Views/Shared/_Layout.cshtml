<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] (RPPP)</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap-grid.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap-reboot.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
    @RenderSection("styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md bg-dark navbar-dark">
            <div class="container-md">
                <a class="navbar-brand" asp-action="Index" asp-controller="Home">
                    <div>JANA</div>
                </a>
                <!-- Toggler/collapsibe Button -->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Navbar links -->
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <vc:navigation></vc:navigation>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        <div>
            <div id="tempmessage" class="alert"></div>
            @if (TempData[Constants.Message] != null)
            {
                bool error = false;
                var obj = TempData[Constants.ErrorOccured];
                if (obj != null)
                {
                    error = (bool)obj;
                }
                obj = TempData[Constants.ErrorOccurred];
                if (obj != null)
                {
                    error = (bool)obj;
                }
                <div class="alert @(error ? "alert-danger" : "alert-success")">
                    @TempData[Constants.Message]
                </div>
            }
        </div>
        @RenderBody()
    </main>

    <footer>
        <p class="text-center">&copy; 2020 - RPPP, ZPR, FER</p>
    </footer>
    <script>
    window.applicationBaseUrl = '@Url.Content("~/")';
    </script>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script asp-src-include="~/lib/jquery-validate/**/jquery.validate.min.js"></script> <!-- za validaciju -->
    <script asp-src-include="~/lib/jquery-validation-unobtrusive/**/*.min.js"></script> <!-- za validaciju -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/pager.js" asp-append-version="true"></script>
    @*<script src="~/lib/font-awesome/js/all.js"></script> *@@*using css instead of js - see https://fontawesome.com/how-to-use/on-the-web/other-topics/performance*@
    @RenderSection("Scripts", required: false)
</body>
</html>
