    <div class="row justify-content-sm-center">
        <div class="col-sm-2">
            Naziv ponude: @Model.Naslov
        </div>
        <div class="col-sm-2">
            Naziv natječaja: @Model.NazivNatječaja
        </div>
        <div class="col-sm-2">
            Opis ponude: @Model.Text
        </div>
        <div class="col-sm-2">
            Naziv Ponuditelja: @Model.NazivPonuditelj
        </div>


        <div class="col-sm-1 text-right">
            <a asp-action="Edit"
               asp-route-id="@Model.PonudaId"
               target="_blank"
               class="btn btn-warning btn-sm" title="Ažuriraj"><i class="fas fa-edit"></i></a>
        </div>
        <form asp-action="Delete" method="post"
              asp-route-page="@ViewBag.Page"
              asp-route-sort="@ViewBag.Sort"
              asp-route-ascending="@ViewBag.Ascending"
              asp-route-filter="@ViewBag.Filter">
            <input type="hidden" name="PonudaId" value="@Model.PonudaId" />
            <button type="submit" class="btn btn-sm btn-danger delete" title="Obriši"><i class="fas fa-trash-alt"></i></button>
        </form>
        <div class="col-sm-1 text-left">
            <a class="btn btn-sm btn-primary cancel"
               asp-action="Index"
               asp-route-page="@ViewBag.Page"
               asp-route-sort="@ViewBag.Sort"
               asp-route-ascending="@ViewBag.Ascending"
               asp-route-filter="@ViewBag.Filter"
               title="Povratak na popis dokumenata">
                <i class="fas fa-undo-alt"></i>
            </a>
        </div>
    </div>

    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    @{
                        string[] nazivi = { "DokumentId", "Naslov", "Vrsta", "Blob"," NazivPonude", "DatumPredaje" };
                        for (int i = 0; i < nazivi.Length; i++)
                        {
                            <th class="text-center">
                                @nazivi[i]
                            </th>
                        }
                    }
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var stavka in Model.doks)
                {
                    <tr>
                        <td class="text-left col-sm-4">
                            @stavka.DokumentId
                        </td>
                        <td class="text-right col-sm-1">
                            @stavka.Naslov
                        </td>
                        <td class="text-center col-sm-1">
                            @stavka.Vrsta
                        </td>
                        <td class="text-right col-sm-2">
                            @stavka.Blob
                        </td>
                        <td class="text-right col-sm-2">
                            @stavka.NazivPonude
                        </td>
                        <td class="text-right col-sm-2">
                            @stavka.DatumPredaje
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>