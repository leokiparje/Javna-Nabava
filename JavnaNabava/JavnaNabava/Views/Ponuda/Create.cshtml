@model JavnaNabava.ViewModels.PonudaViewModel
@{
  ViewBag.Title = "Unos nove ponude";
}

<h2>Unos noce ponude</h2>

<div class="container">
  <form asp-action="Create" method="post" id="dokument_form">
    <div asp-validation-summary="All" class="form-group row"></div>

    <div class="form-group row">
      <label asp-for="PonudaId" class="col-sm-1 col-form-label"></label>
      <div class="col-sm-1">
        <input asp-for="NazivNatječaja" class="form-control" />
      </div>
      <label asp-for="Text" class="col-sm-1 col-form-label"></label>
      <div class="col-sm-2">
        <input asp-for="Text" class="form-control" />
      </div>
      <div class="col-sm-2">
        <button id="save" type="submit" class="btn btn-sm btn-primary save" title="Spremi"><i class="fas fa-save"></i></button>
        <a class="btn btn-sm btn-primary cancel" asp-action="Index" title="Odustani">
          <i class="fas fa-undo-alt"></i>
        </a>
      </div>
    </div>

    <div class="form-group row">
      <label asp-for="Naslov" class="col-sm-1 col-form-label"></label>
      <div class="col-sm-2">
        <input asp-for="Naslov" class="form-control" />
    </div>
    <div class="form-group row">
      <label asp-for="NazivPonuditelj" class="col-sm-1 col-form-label"></label>
      <div class="col-sm-2">
        <input asp-for="NazivPonuditelj" class="form-control" />
    </div>
 



    <div class="col-sm-10">
      <partial name="doks" model="Model.doks" />
    </div>
  </form>
</div>

<partial name="NovaDokumentTemplate" />

@section styles{
  <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
}

@section scripts{
  <partial name="IncludeValidation" />
  <script src="~/lib/jqueryui/jquery-ui.js"></script>
  <script src="~/js/autocomplete.js" asp-append-version="true"></script>
  <script src="~/js/dokumenti.js" asp-append-version="true"></script>
}
