@model JavnaNabava.ViewModels.PonudaViewModel

<tr>
  <td class="text-left">@Model.NazivNatječaja</td>
  <td class="text-left">@Model.Text</td>
  <td class="text-left">@Model.Naslov</td>
  <td class="text-left">@Model.NazivPonuditelj</td>
  <td class="text-left">
    <a asp-action="Show" asp-route-id="@Model.PonudaId" >
      <button data-kont="@Model.PonudaId" type="submit" class="btn btn-sm btn-info" title="Info">
        Doc
      </button>
    </a>
  </td>
  <td>
    <a asp-action="Edit" asp-route-id="@Model.PonudaId" class="btn bt-sm" title="Ažuriraj">
      <i class="fas fa-edit"></i>
    </a>
  </td>

  <td>
    <form asp-action="Delete" method="POST">
      <input type="hidden" name="id" value="@Model.PonudaId" />
      <button data-kont="@Model.PonudaId" type="submit" class="btn btn-sm btn-danger deleteajax" title="Obriši">
        <i class="fas fa-trash-alt"></i>
      </button>
    </form>
  </td>
</tr>