@using JavnaNabava.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ČlanoviKonzorcija

@{
    ViewBag.Title = "Novi član";
}

<h2>Unos člana</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="OibPonuditelj"></label>
        <div><span asp-validation-for="OibPonuditelj" class="text-danger"></span></div>
        <select class="form-control" asp-for="OibPonuditelj" asp-items="ViewBag.Clanovi">
            @*ViewBag.Ponuditelji -> sloziti u controlleru*@
            <option selected value="" disabled>Odaberite ponuditelja</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="IdKonzorcij"></label>
        <div><span asp-validation-for="IdKonzorcij" class="text-danger"></span></div>
        <select class="form-control" asp-for="IdKonzorcij" asp-items="ViewBag.Ponuditelji">
            @*ViewBag.Ponuditelji -> sloziti u controlleru*@
            <option selected value="" disabled>Odaberite konzorcij</option>
        </select>
    </div>
   

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Dodaj</button>
        <a asp-action="Index" class="btn btn-secondary">Odustani</a>
    </div>
</form>

@section scripts {
    <partial name="IncludeValidation" />
}

