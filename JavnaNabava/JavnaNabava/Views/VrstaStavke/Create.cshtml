@model VrstaStavke

@{
    ViewBag.Title = "Nova vrsta stavke";
}
<h2>Unos nove vrste stavke</h2>
<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="NazivVrste"></label>
        <div><span asp-validation-for="NazivVrste" class="text-danger" /></div>
        <input asp-for="NazivVrste" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Dodaj</button>
        <a asp-action="Index" class="btn btn-secondary">Odustani</a>
    </div>
</form>
